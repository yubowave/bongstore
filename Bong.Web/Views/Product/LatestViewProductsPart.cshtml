@model IList<ProductViewModel>
@using Bong.Web.Models;

<div class="panel panel-success recently-products">
    <div class="panel-heading"><strong>RECENTLY VIEWED PRODUCTS</strong></div>
    <div id="recent" class="panel-body">
        @if (Model.Count > 0)
        {
            <ul class="list-unstyled">
                @foreach (var product in Model)
                {
                    <li>
                        @if (!string.IsNullOrEmpty(product.PictureModel.ImageUrl))
                        {
                            <a class="product-picture" href="@Url.RouteUrl("Product", new { productId = product.Id })">
                                <img src="@product.PictureModel.ImageUrl" alt="@product.PictureModel.AlternateText"
                                     data-toggle="tooltip" data-placement="top" title="@product.PictureModel.Title">
                            </a>
                        }
                        <a class="product-name" href="@Url.RouteUrl("Product", new { productId = product.Id })">@product.Name</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <h6>No Recently Viewed Products.</h6>
        }
    </div>
</div>

