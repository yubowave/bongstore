<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bong eStore @ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Yu's ASP.MVC Sample" />
    <meta name="keywords" content="ASP.NET MVC" />
    <meta name="generator" content="Alan Yu" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bong")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bong")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
</head>
<body>
    <div id="notification-bar" class="alert alert-dismissible notification-bar alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <div class="content"></div>
    </div>
    <div class="loading-status" style="display: none">
        <div class="loading-pic"></div>
    </div>
    <div class="container mainframe">
        @Html.Partial("_Header")
        @Html.Action("MainMenu", "Category")
        <div class="row">
            @RenderBody()
        </div>
        <footer class="thumbnail footer-panel">
            @Html.Partial("_Footer")
        </footer>
        <p class="text-center"><small>Copyright &copy; @DateTime.Now.Year Yu's ASP.NET MVC5 Sample. All rights reserved.</small></p>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
